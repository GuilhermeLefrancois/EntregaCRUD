<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <title>Listando Clientes</title>
        <link href="/public/assets/reset.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link href= "/public/assets/style2.css" rel="stylesheet" type="text/css">
    </head>

    <body>
      <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <img style="height: 45px; width: 100px; margin-right: 30px;" src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d9/Node.js_logo.svg/320px-Node.js_logo.svg.png">
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li style="margin-right: 15px;" class="nav-item active">
                  <a class="nav-link" href="/">Inicio<span class="sr-only">(current)</span></a>
                </li>
                
                <li style="margin-right: 15px;" class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Cadastrar
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/cadastro-cliente">Cliente</a>
                    <a class="dropdown-item" href="/cadastro-produto">Produto</a>
                  </div>
                </li>
                <li style="margin-right: 15px;" class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Mostrar
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" href="/show-cliente">Clientes</a>
                      <a class="dropdown-item" href="/show-produto">Produtos</a>
                    </div>
                  </li>
            </div>
          </nav>       
    </header>

        <div class="overflow-auto" id="showProdutos-corpo">
            <h2 id="showProdutos-titulo">Produtos Cadastrados</h2>
            <table id="tabela-produtos" class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <td>Produto</td>
                        <td>Marca</td>
                        <td>Quantidade</td>
                        <td>Preço</td>
                        <td>Apresentação</td>
                        <td>Ramo</td>
                        <td>Entrega</td>
                        <td>Ação</td>
                    </tr>
                </thead>
                <tbody>
                <% data.forEach(function(details) { %>
                    <tr>
                        <td><%= details.produto %></td>
                        <td><%= details.marca %></td>
                        <td><%= details.qntd_estoque %></td>
                        <td><%= details.preco %></td>
                        <td><%= details.apresentacao %></td>
                        <td><%= details.ramo %></td>
                        <td><%= details.tipo_entrega %></td>
                        <td><a href="/edit-produto/<%= details._id %>"><img src="/public/assets/images/editar.png"></a><br><a href="/delete-produto/<%= details._id %>"><img src="/public/assets/images/excluir.png"></a></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</html>